{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "timezone": "Asia/Tokyo",
  "dependencyDashboard": true,
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchPackagePatterns": ["^cloudflare/cloudflared"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchPackagePatterns": ["^influxdb"],
      "groupName": "influxdb"
    },
    {
      "matchPackagePatterns": ["^bitwarden/"],
      "groupName": "bitwarden"
    },
    {
      "matchPackagePatterns": ["postgres"],
      "groupName": "postgres"
    }
  ],
  "kubernetes": {
    "fileMatch": [
      "kubernetes/.+\\.yaml$"
    ]
  },
  "terraform": {
    "fileMatch": [
      "terraform/.+\\.tf$"
    ]
  },
  "argocd": {
    "fileMatch": [
      "kubernetes/application-set/.+\\.yaml$"
    ]
  },
  "regexManagers": [
    {
      "fileMatch": ["kubernetes/.+\\.yaml$"],
      "matchStrings": [
        "image:\\s+(?<depName>.*?):(?<currentValue>.*?)\\s"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": ["terraform/k3s/locals.tf"],
      "matchStrings": [
        "k3s_version\\s+=\\s+\"(?<currentValue>v\\d+\\.\\d+\\.\\d+\\+k3s\\d+)\""
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "k3s-io/k3s",
      "versioningTemplate": "regex:^v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?<compatibility>\\+k3s)(?<build>\\d+)$"
    },
    {
      "fileMatch": ["terraform/k3s/locals.tf"],
      "matchStrings": [
        "cloudflared_version\\s+=\\s+\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "cloudflare/cloudflared"

    }
  ]
}
